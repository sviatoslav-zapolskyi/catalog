<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Hash</th>
      <th>Title</th>
      <th>Pages</th>
      <th>Year</th>
      <th>Format</th>
      <th>Isbn</th>
      <th>Volume</th>
      <th>Volumes</th>
      <th>Price</th>
      <th>Is new</th>
      <th>Condition</th>
      <th>Publisher</th>
      <th>Serie</th>
      <th>Language</th>
      <th>Shelf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.hash_id %></td>
        <td><%= book.title %></td>
        <td><%= book.pages %></td>
        <td><%= book.year %></td>
        <td><%= book.format %></td>
        <td><%= book.isbn %></td>
        <td><%= book.volume %></td>
        <td><%= book.volumes %></td>
        <td><%= book.price %></td>
        <td><%= book.is_new %></td>
        <td><%= book.condition %></td>
        <td><%= book.publisher_id %></td>
        <td><%= book.serie_id %></td>
        <td><%= book.language_id %></td>
        <td><%= book.shelf %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

