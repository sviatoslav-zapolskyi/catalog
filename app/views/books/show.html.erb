<p id="notice"><%= notice %></p>

<p>
  <strong>Hash:</strong>
  <%= @book.hash_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<% @book.images.each do |image| %>
  <%= link_to image_tag(image.variant(resize: '300x300', auto_orient: false).processed), image %>
<% end %>

<p>
  <strong>Works:</strong>
<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">name</th>
    <th scope="col">authors</th>
    <th scope="col">interpreters</th>
    <th scope="col">abstract</th>
  </tr>
  </thead>
  <tbody>
  <% @book.works.each_with_index do |work, row| %>
    <tr>
      <th scope="row"><%= row + 1 %></th>
      <td><%= work.name %></td>
      <td><%= work.authors.map(&:name).join('; ') %></td>
      <td><%= work.interpreters.map(&:name).join('; ') %></td>
      <td><%= work.abstract %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</p>

<p>
  <strong>Pages:</strong>
  <%= @book.pages %>
</p>

<p>
  <strong>Year Published:</strong>
  <%= @book.year_published %>
</p>

<p>
  <strong>Cover:</strong>
  <%= @book.format.cover if @book.format %>
</p>

<p>
  <strong>Isbn:</strong>
  <%= @book.isbn %>
</p>

<% if @book.volume %>
  <p>
    <strong>Volume:</strong>
    <%= @book.volume %>
  </p>
<% end %>

<% if @book.volumes %>
  <p>
    <strong>Volumes:</strong>
    <%= @book.volumes %>
  </p>
<% end %>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Is new:</strong>
  <%= @book.is_new %>
</p>

<% if @book.condition %>
  <p>
    <strong>Condition:</strong>
    <%= @book.condition %>
  </p>
<% end %>

<p>
  <strong>Publishers:</strong>
  <%= @book.publishers.map(&:name).join('; ') if @book.publishers.any? %>
</p>

<p>
  <strong>Serie:</strong>
  <%= @book.serie.name if @book.serie %>
</p>

<p>
  <strong>Language:</strong>
  <%= @book.language.name if @book.language %>
</p>

<p>
  <strong>Shelf:</strong>
  <%= @book.shelf %>
</p>

<p>
  <strong>Circulation:</strong>
  <%= @book.circulation %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @book.quantity %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %>
